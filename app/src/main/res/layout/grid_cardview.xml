<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGreyLight"
    android:elevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bg">

        <ImageView
            android:id="@+id/categoryCardImageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginBottom="@dimen/padding_5"
            android:scaleType="centerCrop"
            android:src="@drawable/loading_100" />

        <TextView
            android:id="@+id/categoryCardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryCardImageView"
            android:layout_marginBottom="@dimen/padding_5"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:gravity="center"
            android:text="Loading" />

        <TextView
            android:id="@+id/categoryCardPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryCardTitle"
            android:background="@drawable/price_tag"
            android:padding="@dimen/padding_5"
            android:text="Loading"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

