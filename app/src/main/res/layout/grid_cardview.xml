<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGreyLight"
    android:elevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bg">

        <FrameLayout
            android:id="@+id/framlayout"
            android:layout_width="180dp"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/categoryCardImageView"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginBottom="@dimen/padding_5"
                android:scaleType="centerCrop"
                android:src="@drawable/loading" />

            <ImageView
                android:id="@+id/premiumImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom|start"
                android:layout_marginBottom="@dimen/padding_5"
                android:layout_marginLeft="@dimen/padding_5"
                android:src="@drawable/ic_stars_white_24dp"
                android:tint="@color/colorBlue"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/categoryCardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/framlayout"
            android:layout_marginBottom="@dimen/padding_5"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:gravity="center"
            android:text="Loading"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryCardTitle"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoryCardPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/price_tag"
                android:padding="@dimen/padding_5"
                android:text="Loading"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/categoryCardBasePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5"
                android:text="Rs 199"
                android:textColor="@color/colorGrey"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

