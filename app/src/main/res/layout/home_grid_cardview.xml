<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bg">

        <ImageView
            android:id="@+id/categoryCardImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/padding_5"
            android:layout_marginTop="@dimen/padding_30"
            android:src="@drawable/loading" />

        <TextView
            android:id="@+id/categoryCardPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/price_tag"
            android:padding="@dimen/padding_5"
            android:text="Loading"
            android:textColor="@color/colorWhite"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/categoryCardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryCardImageView"
            android:layout_marginBottom="@dimen/padding_30"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:gravity="center"
            android:text="Loading"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/categoryCardPrice"
            android:layout_toRightOf="@id/categoryCardPrice"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/categoryCardBasePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5"
                android:text="Rs 199"
                android:textColor="@color/colorGrey"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

