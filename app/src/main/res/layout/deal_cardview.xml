<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="@dimen/padding_5"
    android:background="@color/colorGreyLight"
    android:elevation="1dp">

    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bg">

        <ImageView
            android:id="@+id/categoryCardImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/loading" />


        <TextView
            android:id="@+id/categoryCardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryCardImageView"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/padding_5"
            android:paddingLeft="@dimen/padding_5"
            android:paddingRight="@dimen/padding_5"
            android:shadowColor="@color/colorDarkBlack"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:text="Loading"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryCardTitle"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoryCardPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/deal_price_tag"
                android:padding="@dimen/padding_5"
                android:text="Loading"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_whatshot_white_24dp"
            android:tint="@color/colorPrimary"
            android:layout_gravity="bottom|start"/>
    </FrameLayout>
</android.support.v7.widget.CardView>

