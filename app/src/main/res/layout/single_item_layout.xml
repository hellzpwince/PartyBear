<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="@dimen/padding_5"
    android:background="@color/colorGreyLight"
    android:elevation="1dp">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bg">

        <ImageView
            android:id="@+id/category_ItemImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/category_itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:layout_alignRight="@id/category_ItemImage"
            android:background="@drawable/offer_drawable"
            android:padding="4dp"
            android:paddingLeft="@dimen/padding_08"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="8sp" />


        <TextView
            android:id="@+id/category_itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/category_ItemImage"
            android:layout_gravity="center"
            android:text="Birthday Cakes"
            android:padding="@dimen/padding_10"
            android:textAlignment="center"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>