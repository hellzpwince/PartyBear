<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorGreyLight"
    android:layout_marginRight="@dimen/padding_5"
    android:layout_marginBottom="5dp"
    android:elevation="1dp">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bg">

        <ImageView
            android:id="@+id/categoryCardImageView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="@dimen/padding_5"
            android:scaleType="centerCrop"
            android:src="@drawable/loading" />


        <TextView
            android:id="@+id/categoryCardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_5"
            android:paddingRight="@dimen/padding_5"
            android:layout_below="@id/categoryCardImageView"
            android:layout_marginBottom="@dimen/padding_5"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="Loading" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoryCardPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/price_tag"
                android:padding="@dimen/padding_5"
                android:text="Loading"
                android:textColor="@color/colorWhite"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/categoryCardBasePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5"
                android:text="Rs 199"
                android:textColor="@color/colorWhite"
                android:background="@drawable/baseprice_price_tag"
                android:textSize="8sp"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

