<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_5"
    android:clipToPadding="false"
    android:padding="@dimen/padding_5"
    android:paddingBottom="@dimen/padding_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:clipToPadding="false"
        android:elevation="1dp"
        android:paddingBottom="@dimen/padding_15">

        <ImageView
            android:id="@+id/categoryCardImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/padding_08"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/loading" />

        <TextView
            android:id="@+id/categoryCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryCardImageView"
            android:layout_marginBottom="@dimen/padding_15"
            android:layout_marginLeft="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_10"
            android:text="Loading"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/categoryCardPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryCardTitle"
            android:layout_marginRight="@dimen/padding_10"
            android:background="@drawable/price_tag"
            android:padding="@dimen/padding_5"
            android:paddingLeft="@dimen/padding_15"
            android:paddingRight="@dimen/padding_5"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/eggstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryCardTitle"
            android:layout_toEndOf="@+id/categoryCardTitle"
            android:layout_toRightOf="@+id/categoryCardTitle"
            android:background="@drawable/features_bg"
            android:gravity="end"
            android:padding="@dimen/padding_5"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>

